{% extends "base.html.twig" %}

{% block body %}
	<div class="h1">
		Modifier une sortie
	</div>
	<hr>
	{{form_start(form)}}
	<div style="display:inline-block">
		<table>
			<tbody>
				<tr>
					<td>Nom de la sortie : </td>
					<td>{{form_widget(form.nom)}}</td>
				</tr>
				<tr>
					<td>Date et heure de la sortie : </td>
					<td><input type="text" name="date_debut" id="date_debut" value="{{sortie.getDateDebut()|date('d/m/y H:i:s')}}"></td>
				</tr>
				<tr>
					<td>Date limite d'inscription : </td>
					<td><input type="text" name="date_cloture" id="date_cloture" value="{{sortie.getDateCloture()|date('d/m/y H:i:s')}}"></td>
				</tr>
				<tr>
					<td>Nombre de places : </td>
					<td>{{form_widget(form.nbInscriptionsMax)}}</td>
				</tr>
				<tr>
					<td>Dur√©e : </td>
					<td>{{form_widget(form.duree)}}</td>
				</tr>
				<tr>
					<td>Description et infos : </td>
					<td>{{form_widget(form.description)}}</td>
				</tr>
				<tr>
					<td>Ville : </td>
					<td>
						<select name="ville" id="ville" style="width:60%">
							{% for ville in villes %}
								<option value="{{ville.getId()}}" {% if sortie.lieux.villes.getId() == ville.getId() %}{{"selected"}}{% endif %}>{{ville.getNomVille()}}</option>
							{% endfor %}
						</select>
					</td>
				</tr>
				<tr>
					<td>Lieu : </td>
					<td>
						<select name="lieu" id="lieu" style="width:60%">
							{% for lieu in lieux %}
								<option value="{{lieu.getId()}}" {% if sortie.lieux.getId() == lieu.getId() %}{{"selected"}}{% endif %}>{{lieu.getNomLieu()}}</option>
							{% endfor %}
						</select>
					</td>
				</tr>
				<tr>
					<td>Rue : </td>
					<td><input type="text" value="{{sortie.lieux.rue}}"></td>
				</tr>
				<tr>
					<td>Code postal : </td>
					<td><input type="text" value="{{sortie.lieux.villes.getCodePostal()}}"></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div>
		<button type="submit" class="btn btn-dark">Enregistrer</button>
		<a href="{{path('delSortie',{'id':sortie.id})}}" class="btn btn-dark" style="margin-right:4px">Supprimer la sortie</button>
		<a href="{{path('addSortie')}}" class="btn btn-dark">Annuler</a>
	</div>
{{form_end(form)}}
{% endblock %}