{% extends "base.html.twig" %}

{% block body %}
    <div class="h1">
		Créer une sortie
	</div>
	<hr>
        {{form_start(formSortie)}}
            <div style="display:inline-block">
                <table>
                    <tbody>
                        <tr>
                            <td>Nom de la sortie : </td>
                            <td>{{form_widget(formSortie.nom)}}</td>
                        </tr>
                        <tr>
                            <td>Date et heure de la sortie : </td>
                            <td>{{form_widget(formSortie.date_debut)}}</td>
                        </tr>
                        <tr>
                            <td>Date limite d'inscription : </td>
                            <td>{{form_widget(formSortie.date_cloture)}}</td>
                        </tr>
                        <tr>
                            <td>Nombre de places : </td>
                            <td>{{form_widget(formSortie.nbInscriptionsMax,{"attr":{"style":"width:50%"}})}}</td>
                        </tr>
                        <tr>
                            <td>Durée (min) : </td>
                            <td>{{form_widget(formSortie.duree,{"attr":{"style":"width:30%"}})}}</td>
                        </tr>
                        <tr>
                            <td>Description et infos : </td>
                            <td>{{form_widget(formSortie.description)}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div style="display:inline-block">
                <table>
                    <tbody>
                        <tr>
                            <td>Ville organisatrice : </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Ville : </td>
                            <td>
                                <select name="ville" id="ville" style="width:60%">
                                    <option selected></option>
                                    {% for ville in villes %}
                                        <option value="{{ville.getId()}}">{{ville.getNomVille()}}</option>
                                    {% endfor %}
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Lieu : </td>
                            <td>
                                <select name="lieu" id="lieu" style="width:60%">
                                    <option selected></option>
                                    {% for lieu in lieux %}
                                        <option value="{{lieu.getId()}}">{{lieu.getNomLieu()}}</option>
                                    {% endfor %}
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Rue : </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Code postal : </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Latitude : </td>
                            <td><input type="text" name="latitude" id="latitude"></td>
                        </tr>
                        <tr>
                            <td>Longitude : </td>
                            <td><input type="text" name="longitude" id="longitude"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                <button type="submit" class="btn btn-dark">Enregistrer</button>
                <button type="submit" class="btn btn-dark">Publier la sortie</button>
            </div>
        {{form_end(formSortie)}}
{% endblock %}
