{% extends 'base.html.twig' %}

{% block body %}
	<div id="home">

		{% if app.user %}

		<div class="home-info m-5">
			<h4 class="sub-title">Date du jour</h4>
			<h4 class="sub-title">Participant</h4>
		</div>

		<form id="home-form" action="">
			<div class="filter-p1">
				<div class="mb-3 row">
					<label for="inputPassword" class="col-sm-2 col-form-label">Site</label>
					<div class="col-sm-10">
						<select class="form-select form-select mb-3" aria-label=".form-select example">
							<option selected>Open this select menu</option>
							{% for sortie in lstSortie %}
							<option value="1">{{sortie.nom}}</option>
