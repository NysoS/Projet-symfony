{% extends 'base.html.twig' %}

{% block body %}

	<div class="h" id="login">
		<div class="col-4">
			<form id="login-form" method="post">
				{% if error %}
					<div class="alert alert-danger">{{error.message}}</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

				<div class="mb-3 row">
					<label for="inputEmail" class="col-lg-4 col-form-label">Email*:</label>
					<div class="col-lg-8">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
					</div>
				</div>

				<div class="mb-3 row">
					<label for="inputPassword" class="col-lg-4 col-form-label">Mot de passe*:</label>
					<div class="col-lg-8">
						<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>
					</div>
				</div>

				<div class="switch-remember form-check form-switch m-3">
					<input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="_remember_me">
					<label class="form-check-label ms-2" for="flexSwitchCheckDefault">Se souvenir de moi</label>
				</div>

				<button class="btn btn-lg btn-primary me-3" type="submit">Se connecter</button>
				<a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a>
			</form>
		</div>
	</div>

{% endblock %}
